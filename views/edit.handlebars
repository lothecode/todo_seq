<form action="/todos/{{{todo.id}}}?_method=PUT" method="POST">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done}} checked {{/if}}>
      </div>
    </div>
    <input type="text" class="form-control" value="{{todo.name}}" name="name" placeholder="name">
    <div class="input-group-append">
      <button type="submit" class="btn btn-success">confirm edit</button>
    </div>
  </div>
</form>